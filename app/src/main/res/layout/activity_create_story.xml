<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_edit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite">
        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_close_black_24dp"
            android:background="#0000"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorMain"
            android:text="@string/tv_user_join"
            android:textSize="18sp"/>
        <ImageButton
            android:id="@+id/btn_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/ic_check_black_24dp"
            android:background="#0000"
            android:layout_gravity="end"/>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/shape_main_word"
        app:counterEnabled="true"
        app:counterMaxLength="100"
        app:counterTextAppearance="@color/colorHint"
        app:counterOverflowTextAppearance="@color/colorMain"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_content"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="start"
            android:textColor="@color/colorPrimaryDark"
            android:background="@null"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:maxLength="100"
            app:counterEnabled="true"
            app:counterMaxLength="100"
        />
    </android.support.design.widget.TextInputLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorWhite"
        android:fillViewport="true">
        <LinearLayout
            android:id="@+id/keyword_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_keyword"
                android:hint="@string/story_keyword"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:maxLength="5"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_keyword_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_keyword"
                android:hint="@string/story_keyword"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:maxLength="5"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_keyword_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_keyword"
                android:hint="@string/story_keyword"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:maxLength="5"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_keyword_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_keyword"
                android:hint="@string/story_keyword"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:maxLength="5"/>
        </LinearLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_keyword_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_keyword"
                android:hint="@string/story_keyword"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:maxLength="5"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_keyword_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_keyword"
                android:hint="@string/story_keyword"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:maxLength="5"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_keyword_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_keyword"
                android:hint="@string/story_keyword"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:maxLength="5"/>
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edt_keyword_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shape_keyword"
                android:hint="@string/story_keyword"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColorHint="@color/colorWhite"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:maxLength="5"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
