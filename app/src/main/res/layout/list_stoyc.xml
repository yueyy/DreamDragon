<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:paddingTop="10dp"
              android:paddingStart="16dp"
              android:paddingEnd="16dp"
              android:paddingBottom="10dp">

    <TextView
        android:id="@+id/main_storyc_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/main_storyc_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/story_like_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:tint="@color/colorHint"
            android:layout_marginStart="20dp"
            android:background="#0000"
            android:src="@drawable/ic_hot"/>

        <TextView
            android:id="@+id/story_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="5"/>

        <ImageButton
            android:id="@+id/story_talking_img"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:scaleType="fitCenter"
            android:tint="@color/colorMain"
            android:layout_marginStart="5dp"
            android:background="#0000"
            android:src="@drawable/tab_home"/>

        <TextView
            android:id="@+id/story_talking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="5dp"
            android:text="7"/>

    </LinearLayout>

</LinearLayout>